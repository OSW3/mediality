{% extends 'base.html.twig' %}

{% form_theme formRegister 'bootstrap_4_layout.html.twig' %}

{% block title %} Mon compte{% endblock %}

{% block body %}
<div class="container">
    {{ form_start(formRegister) }}
        {{ form_widget(formRegister, {'attr': {'class': 'task_field'}}) }}
        
        <button type="submit" class='btn btn-success btn-block' >
            {% if updateMode %}
            <i class="fas fa-check"></i>&nbsp&nbsp Enregistrer les modifications
            {% else %}
            Inscription
            {% endif %}
        </button>
    {{ form_end(formRegister) }}
</div>
{% endblock %}