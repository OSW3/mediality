{% extends 'base.html.twig' %}

{% block title %}: Connexion{% endblock %}

{% form_theme formLogin 'bootstrap_4_layout.html.twig' %}

{% block body %}
<div class="container">

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {{ form_start(formLogin) }}
     <div class="row">     
        <div class="col-md-6 login">
     <div class="form-group">
            <label for="login_form_email">E-mail :</label>
            {{ form_widget(formLogin.email, {'attr': {'placeholder': 'E-mail', "class": "form-control form-mediality"}}) }}
        </div>
         <div class="form-group">
            <label for="login_form_password">Mot de passe :</label>
            {{ form_widget(formLogin.password, {'attr': {'placeholder': 'Mot de passe', "class": "form-control form-mediality"}}) }}
        </div>
        {# {{ form_row(formLogin.email, {'attr': {'value': lastUserName }}) }}
        {{ form_widget(formLogin, {'attr': {'class': 'task_field'}}) }} #}
    {{ form_end(formLogin) }}

    <a class="btn btn-danger btn-block" href="{{ path('register') }}">Vous n'avez pas de compte ? Cliquez ici</a>
</div>
{% endblock %}