{% extends 'base.html.twig' %}
{% block title %}Event{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ event.id }}</td>
        </tr>
        <tr>
            <th>Date de début</th>
            <td>{{ event.dateStart ? event.dateStart|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Date de fin</th>
            <td>{{ event.dateEnd ? event.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ event.title }}</td>
        </tr><tr>
            <th>Description</th>
            <td>{{ event.description }}</td>
        </tr><tr>
            <th>Category</th>
            <td>{{ event.category }}</td>
        </tr><tr>
            <th>Lieu</th>
            <td>{{ event.place }}</td>
        </tr><tr>
            <th>Adresse</th>
            <td>{{ event.address }}</td>
        </tr>
        </tbody>

    </table>
    {% if event.upload is not null %}
        <a href="{{ asset('uploads/' ~ event.upload) }}" class="btn btn-secondary btn-block">View brochure (PDF)</a>

    {% endif %}
    <a href="{{ path('eventEdit', {'id': event.id}) }}" class="btn btn-primary btn-block"><i class="fa fa-pencil-alt"></i></a>
    <form class="delete" action="{{ path('eventDelete', {'id': event.id}) }}" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer cet évenement?')">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
        <button type="submit" class="btn btn-danger btn-block"><i class="fa fa-trash-alt"></i></button>
    </form>
{% endblock %}
