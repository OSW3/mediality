{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block stylesheets %}
 <link rel="stylesheet" href="{{ asset('assets/css/base/Profil.css') }}">
{% endblock %}

{% block body %}
{% for team in team %}
<section class="our-webcoderskull padding-lg mt-5">
        <div class="container">
          <div class="row heading heading-icon workspace-team">
              <h2 class="d-block mx-auto">Team {{ team.name }}</h2>
              <p class="p-5"> {{ team.description }}</p>
          </div>
            <ul class="row">
                {% for user in team.users %}
                <li class="col-12 col-md-6 col-lg-3">
                  <div class="cnt-block equal-hight" style="height: 349px;">
                      <figure><img src="http://www.webcoderskull.com/img/team4.png" class="img-responsive" alt="photo"></figure>
                      <h3>{{ user.firstname }}</h3>
                      <p>{{ user.status }}</p>
                      <a class="mr-3" href="mailto:{{ user.email }}"><i class="fas fa-envelope"></i></a>
                      <a href="tel:{{ user.phone }}"><i class="fas fa-phone"></i></a>
                  </div>
              </li> 
                {% endfor %}
            </ul>
    </div>
</section>
<hr>
{% endfor %}
{% endblock %}

